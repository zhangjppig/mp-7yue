.container{
  display: flex;
  flex-direction: column;
}
.head-img{
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(25rpx);  
  /* 模糊效果 */
}
.head-img-hover{
  width: 100%;
  height: 320rpx;
  position: absolute;
  top:0;
  left: 0;
  display: flex;
  flex-direction: column;
}
.main-title{
  font-size:34rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 2px;
  margin-top: 50rpx;
  margin-left: 40rpx;
}
.sub-title{
  color: #fff;
  font-size: 28rpx;
  margin-top: 30rpx;
  margin-left: 40rpx;
}
.like{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}
.highlight-font{
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.plain-font{
  color: #667;
  font-size: 22rpx;
  margin-right: 30rpx;
}
.movie-img{
  width: 175rpx;
  height: 238rpx;
  position: absolute;
  top:170rpx;
  right:30rpx
}